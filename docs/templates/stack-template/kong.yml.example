_format_version: "2.1"
_transform: true
services:
  - name: postgrest
    url: http://rest:3000
    routes:
      - name: postgrest-route
        hosts:
          - ${API_EXTERNAL_DOMAIN}
        paths:
          - /
        strip_path: false
plugins:
  - name: cors
    config:
      origins:
        - "*"
      methods:
        - GET
        - POST
        - PATCH
        - PUT
        - DELETE
        - OPTIONS
      headers:
        - Authorization
        - Content-Type
      exposed_headers:
        - Content-Range
        - Range-Unit
      credentials: true
      max_age: 3600
